using System;

class Program
{
    static void Main()
    {
        // Loop para exibir os números pares entre 0 e 100
        for (int i = 0; i <= 100; i++)
        {
            // Verifica se o número é par
            if (i % 2 == 0)
            {
                Console.WriteLine(i);
            }
     
}
      
			Console.Write("Press any key to continue . . . "); 
			Console.ReadKey(true);
		}
	}
