using System;

class Program
{
    static void Main()
    {
        // Solicita ao usuário para inserir um número inteiro positivo
        Console.Write("Por favor, insira um número inteiro positivo: ");
        int numero;
        
        // Tenta converter a entrada do usuário para um número inteiro
        while (!int.TryParse(Console.ReadLine(), out numero) || numero <= 0)
        {
            Console.Write("Entrada inválida! Por favor, insira um número inteiro positivo: ");
        }

        // Exibe todos os números pares entre 0 e o número inserido
        Console.WriteLine("Números pares entre 0 e {numero}:");
        for (int i = 0; i <= numero; i++)
        {
            if (i % 2 == 0)
            {
                Console.WriteLine(i);
            }
        }

			Console.Write("Press any key to continue . . . "); 
			Console.ReadKey(true);
		}
	}
